<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reja</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
          rel="stylesheet" 
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
          crossorigin="anonymous"/>
  </head>

  <body style="background-color:lightblue">
    <div class="container">
        <h1 class="display-3 text-center py-1">Reja va Maqsadlar</h1>
        <div style="margin-bottom: 40px;">
            <form class="row g-3" id="create-form" action="/create-item" method="POST">
                <div class="d-flex align-items-center">
                   <input 
                     id="create-field" 
                     name="reja" 
                     autofocus 
                     autocomplete="off" 
                     type="text" 
                     class="form-control" 
                     style="flex:1">
                   <button type="submit" class="btn btn-primary" style="border-radius: 5px; margin-left: 5px;">Yangi Reja qo'shish</button>
                </div>
              </form>
        </div>
        <!-- <%= items[1].reja %> -->

        <ul id="item-list" class="list-group list-group-flush pb-5">
          <% items.map(function(item) { %>
            <li class="list-group-item list-group-item-info d-flex align-items-center justify-content-between">
              <span class="item-text"><%=item.reja%></span>
              <div>
                <button data-id="<%=item._id%>" class="edit-me btn btn-secondary btn-sm mr-1">Ozgartirish</button>
                <button data-id="<%=item._id%>" class="delete-me btn btn-danger btn-sm">Ochirish</button>
              </div>  
            </li>
         <% }) %>
        </ul>
         <button type="button" class="btn btn-danger" style="border-radius: 20px;">Hamma rejalarni O'chirish</button>
      </div>
      </div>
      
      <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
      <script src="/browser.js"></script>
     </body>
    </html>